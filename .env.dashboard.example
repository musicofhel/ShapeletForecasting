# Dashboard Configuration Example
# Copy this file to .env.dashboard and update with your values

# Dashboard Settings
DASH_DEBUG=false
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_WORKERS=4

# Application Settings
APP_NAME=Financial Wavelet Dashboard
APP_VERSION=1.0.0
APP_ENV=production

# Data Sources
DATA_DIR=/app/data
MODEL_DIR=/app/models
CACHE_DIR=/app/cache
UPLOAD_DIR=/app/uploads

# API Configuration
API_URL=http://api:8000
API_TIMEOUT=30
# Generate a secure API key for production
API_KEY=your-api-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB=0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=50

# Database Configuration (optional)
# DATABASE_URL=postgresql://user:password@db:5432/wavelet_db

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Performance
MAX_CACHE_SIZE=1000
CALLBACK_TIMEOUT=60
UPDATE_INTERVAL=5000
MAX_CONCURRENT_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/dashboard.log

# Feature Flags
ENABLE_REALTIME_UPDATES=true
ENABLE_PATTERN_DETECTION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true

# Data Limits
MAX_DATA_POINTS=100000
MAX_PATTERN_LENGTH=500
MAX_PREDICTION_HORIZON=100

# External Services (optional)
# Get your API keys from respective services
YAHOO_FINANCE_API_KEY=
ALPHA_VANTAGE_API_KEY=

# Notification Settings (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-smtp-password
# NOTIFICATION_EMAIL=admin@example.com

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# Resource Limits
MEMORY_LIMIT=2G
CPU_LIMIT=2.0
